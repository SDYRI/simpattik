@model TasikmalayaKota.Simpatik.Web.Services.mKodeRekening.Models.mKodeRekeningModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <ejs-dropdownlist id="IdParent" placeholder="Pilih Akun" popupHeight="200px" allowFiltering="true" filtering="onfilteringAkun" sortOrder="@ViewBag.sortDropdown" 
                                  query="@ViewBag.queryAkun" floatLabelType="Always">
                    <e-data-manager url="/KodeRekeningMaster/KodeRekeningMasterAll" adaptor="UrlAdaptor" crossDomain="true"></e-data-manager>
                    <e-dropdownlist-fields text="NamaSubRincian" value="IdKodeRekening"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="KodeSubRincian" cssClass="e-input" placeholder="Kode Kelompok" floatLabelType="Always" ejs-for="@Model.KodeSubRincian"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-8">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="NamaSubRincian" cssClass="e-input" placeholder="Nama Kelompok" floatLabelType="Always" ejs-for="@Model.NamaSubRincian"></ejs-textbox>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>
