@model TasikmalayaKota.Simpatik.Web.Services.tsIdentifikasi.Models.tsIdentifikasiModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<html>
<head>
    <style>
        .title {
            text-transform: uppercase;
            text-align: center;
            border: none;
            font-weight: 600;
            margin-bottom: 10px;
            padding: 5px;
        }

        .profile-header {
            margin-bottom: 30px;
            border-spacing: 0;
            border: none;
            font-size: small;
            font-weight: bold;
            font-family: sans-serif;
        }

            .profile-header td {
                border: none;
            }

            .profile-header t {
                border: none;
            }

        .profile-body {
            margin-bottom: 30px;
            border-spacing: 0;
            border: none;
        }

            .profile-body td {
                border-top: 0;
            }

            .profile-body td {
                border-right: 0;
                padding: 5px 0;
            }

        .text-center {
            text-align: center;
        }

        table {
            border: 1px solid #000000;
            width: 100%;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }

        td {
            border-top: 1px solid #000000;
        }

        th,
        td {
            border-right: 1px solid #000000;
            padding: 5px 0;
        }

        .data-penyaluran {
            margin-top: 30px;
        }

        .subtitle {
            font-weight: 600;
            margin-bottom: 15px;
        }

        .info {
            page-break-inside: avoid;
            font-size: 10pt;
            font-family: arial;
            border-spacing: 0;
        }

        .info-desc {
            font-weight: 600;
            margin: 10px 0;
        }

        .signature {
            margin-top: 30px;
            text-align: center;
            margin-left: 400px;
        }

        .location-date {
            font-weight: 600;
        }

            .location-date .date {
                text-transform: uppercase;
            }

        .signature .name {
            text-transform: uppercase;
            font-weight: 600;
        }

        th {
            border-bottom: 1px solid #000000;
        }

            th:last-child,
            td:last-child {
                border-right: 0;
            }

        .noborder-btm {
            border-bottom: none;
        }

        .pad-left-10 {
            padding-left: 10px;
        }
    </style>
</head>
<body>
    <table class='profile-header' style='font-size: small; font-family: arial;'>
        <tr>
            <td colspan='2' class='title' style='font-size: medium; font-family: arial;padding-top: 50px;'>
                <img src='{1}' alt='logo' width='35%' />
            </td>
        </tr>
        <tr>
            <td colspan='2' class='title' style='font-size: small; font-family: arial;'>
                <p>@ViewBag.opd</p>
            </td>
        </tr>
        <tr>
            <td colspan='2' class='title' style='font-size: medium; font-family: arial;'>
                <p>SURAT PENETAPAN</p>
            </td>
        </tr>
        <tr>
            <td colspan='2' class='title' style='font-size: small; font-family: arial;'>
                <p>Nomor : .................................................................................................</p>
            </td>
        </tr>
    </table>

    <table class='profile-body' style='font-size: small; font-family: arial;'>
        <tr>
            <td width='100px'>Menimbang</td>
            <td width='10px'>:</td>
            <td>a. bahwa untuk menindaklanjuti dokumen Perencanaan Pengadaan yang telah disusun oleh PPK, maka diperlukan penetapan Perencanaan Pengadaan</td>
        </tr>
        <tr>
            <td width='100px'></td>
            <td width='10px'></td>
            <td>b. ..............................................................................................................</td>
        </tr>
        <tr>
            <td width='100px'>Dasar</td>
            <td width='10px'>:</td>
            <td>a. ..............................................................................................................</td>
        </tr>
        <tr>
            <td width='100px'></td>
            <td width='10px'></td>
            <td>b. ..............................................................................................................</td>
        </tr>
    </table>

    <table class='profile-header' style='font-size: small; font-family: arial;'>
        <tr>
            <td colspan='2' class='title' style='font-size: medium; font-family: arial;'>
                <p>MENETAPKAN</p>
            </td>
        </tr>
    </table>

    <table class='profile-body' style='font-size: small; font-family: arial;'>
        <tr>
            <td width='100px'>Kesatu</td>
            <td width='10px'>:</td>
            <td>Perencanaan Pengadaan Barang/Jasa Pemerintah dalam lingkup (@ViewBag.opd) Tahun Anggaran @DateTime.Now.Year</td>
        </tr>
        <tr>
            <td width='100px'>Kedua</td>
            <td width='10px'>:</td>
            <td>Hasil Perencanaan Pengadaan dituangkan ke dalam Rencana Umum Pengadaan Barang/Jasa Pemerintah Tahun Anggaran @DateTime.Now.Year</td>
        </tr>
        <tr>
            <td width='100px'>Ketiga</td>
            <td width='10px'>:</td>
            <td>Penetapan ini mulai berlaku pada tanggal ditetapkan</td>
        </tr>
    </table>

    <div class='info'>
        <div class='signature'>
            <div class='location-date'>
                <div class='date'>Tasikmalaya, @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year</div>
                Pengguna Anggaran/Kuasa Pengguna Anggaran,
            </div>
            <br><br><br><br>
            <div class='name'>
                @ViewBag.pejabat
            </div>
            <div class='name'>
                NIP. ...............................................
            </div>
        </div>
    </div>
</body>
</html>