@model TasikmalayaKota.Simpatik.Web.Services.tHps.Models.tHpsModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <div class="e-float-input e-control-wrapper e-input e-valid-input">
                    @Html.TextBoxFor(x => Model.opd, new { @class = "e-control e-textbox e-lib", @readonly = "readonly" })
                    @*@Html.TextBoxFor(x => Model.jeniskebutuhan, new { @class = "e-control e-textbox e-lib", @readonly = "readonly", @hidden = "hidden" })*@
                    <input id="paket" data-val="true" class="e-control e-textbox e-lib" type="text" role="textbox" hidden>
                    <span class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="label_opd">OPD</label>
                </div>
            </div>
            <div class="e-float-input e-control-wrapper">
                <div class="e-float-input e-control-wrapper e-input e-valid-input">
                    @Html.TextBoxFor(x => Model.pejabat, new { @class = "e-control e-textbox e-lib", @readonly = "readonly" })
                    <span class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="label_pejabat">Pejabat Pembuat Komitmen</label>
                </div>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="uraianpekerjaan" cssClass="e-input" placeholder="Uraian Pekerjaan" floatLabelType="Always" ejs-for="@Model.uraianpekerjaan"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="volume" cssClass="e-input" placeholder="Volume Pekerjaan" floatLabelType="Always" ejs-for="@Model.volume"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="nomatapembayaran" cssClass="e-input" placeholder="No Mata Pembayaran" floatLabelType="Always" ejs-for="@Model.nomatapembayaran"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="harga" cssClass="e-input" placeholder="Harga" floatLabelType="Always" ejs-for="@Model.harga"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="hargassh" cssClass="e-input" placeholder="SSH" floatLabelType="Always" ejs-for="@Model.hargassh"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="satuan" cssClass="e-input" placeholder="Satuan" floatLabelType="Always" ejs-for="@Model.satuan"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="pajak" cssClass="e-input" placeholder="Pajak" floatLabelType="Always" ejs-for="@Model.pajak"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="jumlahharga" cssClass="e-input" placeholder="Jumlah Harga" floatLabelType="Always" ejs-for="@Model.jumlahharga"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="keteranganhps" cssClass="e-input" placeholder="Keterangan" floatLabelType="Always" ejs-for="@Model.keteranganhps"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="selisihpagu" cssClass="e-input" placeholder="Selisih Pagu" floatLabelType="Always" ejs-for="@Model.selisihpagu"></ejs-textbox>
            </div>
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="selisihvolume" cssClass="e-input" placeholder="Selisih Volume" floatLabelType="Always" ejs-for="@Model.selisihvolume"></ejs-textbox>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>