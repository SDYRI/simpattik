@model TasikmalayaKota.Simpatik.Web.Services.mOpd.Models.mOpdModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div>
    <div class="form-row">
       <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <ejs-dropdownlist id="ListIdUrusanCb" placeholder="Pilih Bidang Urusan" popupHeight="200px" allowFiltering="true" filtering="onfilteringUrusanSubOpd" sortOrder="@ViewBag.sortDropdown"
                                  query="@ViewBag.queryUrusan" floatLabelType="Always" close="onchangeUrusan">
                    <e-data-manager url="/UrusanMaster/UrusanMasterAll" adaptor="UrlAdaptor" crossDomain="true"></e-data-manager>
                    <e-dropdownlist-fields text="NamaSubUrusan" value="IdUrusan"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                <ejs-dropdownlist id="IdParent" placeholder="Pilih Organisasi" popupHeight="200px" allowFiltering="true" filtering="onfilteringOpd" sortOrder="@ViewBag.sortDropdown"
                                  query="@ViewBag.queryOPD" floatLabelType="Always" enabled="false">
                    <e-data-manager url="/OpdMaster/OpdMasterUrusan" adaptor="UrlAdaptor" crossDomain="true"></e-data-manager>
                    <e-dropdownlist-fields text="NamaSubOpd" value="IdOpd"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="KodeSubOpd" cssClass="e-input" placeholder="Kode Unit" floatLabelType="Always" ejs-for="@Model.KodeSubOpd"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-8">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="NamaSubOpd" cssClass="e-input" placeholder="Nama Unit" floatLabelType="Always" ejs-for="@Model.NamaSubOpd"></ejs-textbox>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>
