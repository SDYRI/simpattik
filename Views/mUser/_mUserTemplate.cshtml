@model TasikmalayaKota.Simpatik.Web.Services.mUser.Models.mUserModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="NamaUser" cssClass="e-input" placeholder="Nama User" floatLabelType="Always" ejs-for="@Model.NamaUser"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="NipUser" cssClass="e-input" placeholder="Nip User" floatLabelType="Always" ejs-for="@Model.NipUser"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="JabatanUser" cssClass="e-input" placeholder="Jabatan User" floatLabelType="Always" ejs-for="@Model.JabatanUser"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="GolonganUser" cssClass="e-input" placeholder="Golongan User" floatLabelType="Always" ejs-for="@Model.GolonganUser"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="UserName" cssClass="e-input" placeholder="User Name" floatLabelType="Always" ejs-for="@Model.UserName"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-textbox id="PasswordUser" cssClass="e-input" placeholder="Password User" floatLabelType="Always" type="password" ejs-for="@Model.PasswordUser"></ejs-textbox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-combobox id="PappkIdUser" dataSource="@ViewBag.pappk" cssClass="e-input" placeholder="Pilih PA/PPK" floatLabelType="Always" ejs-for="@Model.PappkIdUser">
                    <e-combobox-fields text="Text" value="Value"></e-combobox-fields>
                </ejs-combobox>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-dropdownlist id="ListIdOpdUser" placeholder="Pilih OPD" popupHeight="200px" allowFiltering="true" filtering="onfilteringOPD" sortOrder="@ViewBag.sortDropdown" query="@ViewBag.queryOPD" floatLabelType="Always">
                    <e-data-manager url="/OpdMaster/OpdMasterSelect" adaptor="UrlAdaptor" crossDomain="true"></e-data-manager>
                    <e-dropdownlist-fields text="NamaSubOpd" value="IdOpd"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-combobox id="TipeIdUser" dataSource="@ViewBag.tipeuser" cssClass="e-input" placeholder="Pilih Tipe User" floatLabelType="Always" ejs-for="@Model.TipeIdUser">
                    <e-combobox-fields text="Text" value="Value"></e-combobox-fields>
                </ejs-combobox>
            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>
