@model TasikmalayaKota.Simpatik.Web.Services.mUser.Models.mUserModel
@{
    ViewData["Title"] = ViewBag.Title;
    Dictionary<string, object> resetType = new Dictionary<string, object>();
    resetType.Add("type", "reset");
    Dictionary<string, object> submitType = new Dictionary<string, object>();
    submitType.Add("type", "submit");
}

<div>
    <form asp-action="UserValidation">
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="NamaUser" cssClass="e-input" placeholder="Nama User" floatLabelType="Always" ejs-for="@Model.NamaUser" enabled="false"></ejs-textbox>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="NipUser" cssClass="e-input" placeholder="Nip User" floatLabelType="Always" ejs-for="@Model.NipUser" enabled="false"></ejs-textbox>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="JabatanUser" cssClass="e-input" placeholder="Jabatan User" floatLabelType="Always" ejs-for="@Model.JabatanUser" enabled="false"></ejs-textbox>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="GolonganUser" cssClass="e-input" placeholder="Golongan User" floatLabelType="Always" ejs-for="@Model.GolonganUser" enabled="false"></ejs-textbox>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="UserName" cssClass="e-input" placeholder="User Name" floatLabelType="Always" ejs-for="@Model.UserName" enabled="false"></ejs-textbox>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    <ejs-textbox id="PasswordUser" cssClass="e-input" placeholder="Password User" floatLabelType="Always" type="password" ejs-for="@Model.PasswordUser"></ejs-textbox>
                </div>
            </div>
            <div class="e-row">
                <div style="width: 190px;margin:0px auto;height: 100px;padding-top: 25px;">
                    <div style="display: inline-block;">
                        <ejs-button id="validateSubmit" content="Simpan" isPrimary="true" htmlAttributes="submitType"></ejs-button>
                    </div>
                    <div style="float: right;">
                        <ejs-button id="resetBtn" content="Bersihkan" htmlAttributes="resetType"></ejs-button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

